# Copy to .env and set values. Used by docker compose and (when backend=opensearch) the app.

# Vector store backend (optional; default chroma). Use opensearch for OpenSearch.
# VECTOR_STORE_BACKEND=chroma

# OpenSearch Docker (required for: docker compose up)
# Password must be strong (8+ chars, upper, lower, number, symbol; avoid common patterns like abC123!@#). Test strength: https://lowe.github.io/tryzxcvbn
OPENSEARCH_INITIAL_ADMIN_PASSWORD=

# OpenSearch app connection (required when using --backend opensearch or VECTOR_STORE_BACKEND=opensearch)
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_INDEX=fast_subjects
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=
